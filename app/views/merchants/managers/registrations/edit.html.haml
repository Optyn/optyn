= banner("Edit Account")

#merchants.edit_page
  %h1 Edit Your Account
  .form.pad3pc
    = form_for(resource, :as => resource_name, :url => merchants_manager_registration_path, :html => { :method => :put }) do |f|
      = devise_error_messages!
      %div
        = f.label :email
        = f.email_field :email
      - if devise_mapping.confirmable? && resource.pending_reconfirmation?
        %div
          Currently waiting confirmation for: #{resource.unconfirmed_email}
      - if resource.authentications.blank?
        %div
          = f.label :password
          = f.password_field :password, :autocomplete => "off"
          %span.help-inline (leave blank if you don't want to change it)
        %div
          = f.label :password_confirmation
          = f.password_field :password_confirmation
          %span.help-inline (leave blank if you don't want to change it)
        %div
          = f.label :current_password
          = f.password_field :current_password
          %span.help-inline (we need your current password to confirm your changes)
        %div
          = f.label :picture
          = image_tag current_merchants_manager.image_url(session[:omniauth_manager_authentication_id]), :alt => "User Avatar", :class => "profile_image"
          %br
          = f.file_field :picture 
          %br
      %div{:style => "padding-top: 20px;"}
        = f.submit "Update", class: 'btn btn-primary'
        = link_to "Back", :back, class: 'btn'

    -#%h3 Cancel my account
    -#%p
      -#Unhappy? #{button_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete}.
