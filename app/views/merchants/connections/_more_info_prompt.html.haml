%div.modal.hide.fade{:id => "infoDialog_#{user.id}", :style=> "height:200px"}
	%div.modal-header{"button type"=>"button", "class"=>"close", "data-dismiss"=>"modal", "aria-hidden"=>"true"}x  
	%div.modal-body
		%h3
			- user.permissions.each do |a|
				- if a == "name"
					= "Name: " + user.name
					%br/
				- elsif a =="email"
					= "Email-id: " + user.email