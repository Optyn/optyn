#box_reset
  .container
    .span12.box_wrapper
      .span12.box
        %div
          .head
            %h4 Enter your email address below to receive instructions on how to reset your password.
          .form
            %form
              %input{:placeholder => "Email address", :type => "text"}/
              %input.btn{:type => "submit", :value => "Reset password"}/
      %p.already
        Know your password?
        %a{:href => "signin.html"} Sign in
