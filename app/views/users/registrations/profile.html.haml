#consumer
  .container
    = render partial: "shared/menu"
    .span8.edit_page.profile-container
      %div
        %h3
          Change Your Profile
          %a.btn{:href => edit_user_registration_path, :style => "float: right"} Change Account Details
        %hr
        .form
          = form_for(resource, :as => resource_name, :url => profile_path, :method => :put) do |f|
            = devise_error_messages!
            = f.label :Name
            = f.text_field :name, :autofocus => true
            %br/
            = f.label :Gender
            = f.radio_button :gender,'m'
            = "Male"
            = f.radio_button :gender,'f',:checked=>true
            = "Female"
            %br/
            %br/
            = f.label :Date_Of_Birth
            = f.text_field :birth_date , :class=>"datepicker"
            %br/
            = f.label :Office_Zip_Code
            = f.text_field :office_zip_code
            %br/
            = f.label :Home_Zip_Code
            = f.text_field :home_zip_code
            %br/
            = f.label :picture
            %img{:src => current_user.image_url(session[:omniauth_authentication_id]), :alt => "User Avatar", :class => "profile_image"}
            = f.file_field :picture 
            %br/
            ="What information should we share with you connections?"
            %br/
            = f.fields_for :permissions_users do |p|
              = p.check_box :action
              = p.hidden_field :permission_id
              = p.object.permission.name
            %br/
            = f.label :Interest
            = f.select "business_ids",Business.all.collect {|p| [ p.name, p.id ] },{}, {:class => "chzn-select", :style => "width:250px; height:0px",:multiple=>true}
            %br/
            %div{:style => "padding-top: 20px;"}
              = f.submit "Update", class: 'btn btn-primary'
              = link_to "Back", :back, class: 'btn'