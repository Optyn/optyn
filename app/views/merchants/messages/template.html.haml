= banner("Select your Template")

= render partial: "merchants/messages/message_menu"

#merchants.container-fluid.pad3pc

  #choose_message
    = render :partial => 'progress_bar'

    - if @message.template_id.present?
      .row-fluid
        .pull-left
          = link_to "Change Details", edit_template_merchants_message_path(@message.uuid), class: 'btn btn-primary'

        .pull-right
          - if @message.template_id.present?
            = link_to "Preview", preview_template_merchants_message_path(@message.uuid), class: 'btn btn-success'

    .blank-space

    #template_wrapper
      - if @message.template_id.present?
        = render partial: "editor_wrapper"
      - else
        = render partial: "template_chooser"


    #loading( style='display: none;' )
      = image_tag 'ajax-loader.gif', alt: 'Page is loading ...'
