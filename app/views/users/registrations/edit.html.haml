%h1
  Edit Your Account

#merchants.pad3pc
  .edit_page

    .form.form-horizontal
      = form_for(resource, :as => resource_name, :url => account_path, :html => { :method => :put }) do |f|
        = devise_error_messages!
        .control-group
          .control-label
            = f.label :email
          .controls
            = f.email_field :email, :autofocus => true
        - if devise_mapping.confirmable? && resource.pending_reconfirmation?
          %div
            Currently waiting confirmation for: #{resource.unconfirmed_email}
        - if resource.authentications.blank?
          .control-group
            .control-label
              = f.label :password
            .controls
              = f.password_field :password, :autocomplete => "off"
              %div
                %small (leave blank if you don't want to change it)
          .control-group
            .control-label
              = f.label :password_confirmation
            .controls
              = f.password_field :password_confirmation
          .control-group
            .control-label
              = f.label :current_password
            .controls
              = f.password_field :current_password
              %div
                %small (we need your current password to confirm your changes)
        %div{:style => "padding-top: 20px;"}
        = f.submit "Update", class: 'btn btn-primary'
        = link_to "Back", :back, class: 'btn'
      -#%h3 Cancel my account
      -#%p
        -#Unhappy? #{button_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete}.
