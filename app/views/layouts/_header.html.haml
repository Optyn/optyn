/ begin navbar
.navbar.navbar-fixed-top
  .navbar-inner
    .container
      %a.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse"}
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.brand{:href => root_path}
        = image_tag "/assets/logo.png", :alt => 'logo'
      .nav-collapse.collapse
        %ul.nav.pull-right
          - unless someone_logged_in? 
            %li
              %a{:href => root_path} Home
            %li
              %a{:href => consumer_features_path} Consumers
            %li
              %a{:href => merchant_features_path} Merchants
            %li
              %a{:href => pricing_path} Pricing
            %li
              =link_to("Login", new_user_session_path, class: "loginBtn")


          - if merchants_manager_signed_in?
            = render partial: "layouts/merchant_dropdown"
          - if user_signed_in?
            = render partial: "layouts/consumer_dropdown"
/ ends navbar