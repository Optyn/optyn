#box_sign
  .container
    = render partial: "merchants/shared/menu"
    .span8.box_wrapper
      %div
        %a.btn{:href => merchants_add_manager_path}
          %i.icon-white.icon-heart
          Add Manager
      %table.table
        %tr 
          %th #
          %th Name
          %th Email
          %th Created at

          

        - @managers.each_with_index do |manager,index|
          %tr
            %td
              = index + 1
            %td
              = manager.name
            %td
              = manager.email
            %td
              = format_managers_created_at(manager.created_at)



