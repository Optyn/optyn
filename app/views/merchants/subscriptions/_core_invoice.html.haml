.row-fluid
	.span6
		%h5 OPTYN.COM
		www.optyn.com
	.span6.text-right
		= Time.now.strftime("%B %d,%Y")

.blank-space

%table.table.op-invoice
	%tbody
		%tr
			%td
				Subscription to 
				= @amount 
				pm
			%td
				= @amount
		/ %tr
		/ 	%td
		/ 		Subscription to foobar
		/ 	%td
		/ 		$29.00
		%tr.info
			%td
				%strong Subtotal
			%td
				%strong #{@subtotal}
		%tr
			%td
				-if @invoice.present?
					- if @invoice[:stripe_coupon_percent_off].present?
						#{@invoice[:stripe_coupon_token]} (#{@invoice[:stripe_coupon_percent_off]}% off)
					-elsif  @invoice[:stripe_coupon_amount_off].present?
						#{@invoice[:stripe_coupon_token]} ($ #{@invoice[:stripe_coupon_amount_off]} off)

			%td
				= @discount_amount
		%tr.info
			%td
				%strong Total
			%td
				%strong #{@total}
	%tfoot
		%tr
			%td( colspan='2' )
				.text-center
					= "**** **** **** #{@card_last4}"

.blank-space


.row-fluid
	.span6
		%p
			%strong Questions?
		%p
			Contact OPTYN.COM at
			%a( href='mailto:alen@optyn.com') alen@optyn.com

	.span6
		%p
			%strong OPTYN.COM
		%p
			222 W Merchandise Mart Plaza 
			%br
			Chicago IL 60654
			%br
			%a( href='www.optyn.com' target='blank') www.optyn.com

.blank-space
