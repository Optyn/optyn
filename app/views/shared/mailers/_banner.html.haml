%table{:style => 'width:100%; height:30px; background-color:#8ab953;'}
  %tr
    %td
    %td
      %div{:style => "max-width:600px;margin:0 auto;display:block;"}
        %table{:style => 'width:100%; background-color:#8ab953;'}
          %tr
            %td{:style => "padding-top:10px;padding-bottom:10px;"}
              - if @shop_logo
                - if @shop.has_logo?
                  = image_tag @shop.logo_location, alt: @shop.name, title: @shop.name
                - else
                  %h3{:style => "color:white;"}
                    = @shop.name
              - else
                = image_tag "http://development.optyn.com/assets/logo.png"

            %td{:style => "padding:10px; text-align: right;"}
              %h6{:style => "margin:0px;padding: 0px;font-size: 16px;color: #ffffff;weight:900;"}
                = yield :header
    %td
