#message_meta_data
  %h4
    Campaign Message Details
    = link_to "Make Changes", '#message_meta_modal', class: "btn btn-primary", role: "button", 'data-toggle' => "modal"
  %hr/

  %ul
    %li.message-subject
      %div
        %strong Subject:
      %div
        = @message.subject

    %li.message-send-timestamp
      %div
        %strong To be sent on:
      %div
        %em
          = message_send_on_date(@message)

    %li.message-receivers
      %div
        %strong E-mail will be sent to:
      %div
        = message_receiver_labels(@message.label_names)
        == (#{@message.connections_count} total)

  #message_meta_modal.modal.hide.fade{'tabindex' => "-1", 'role' => "dialog", 'aria-labelledby' => "myModalLabel", 'aria-hidden' => "true"}
    = render partial: "merchants/messages/meta_form", locals: {message: @message}