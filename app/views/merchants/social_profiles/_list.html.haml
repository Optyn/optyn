%table#social_profile_table.table.table-striped.table-hover
  %thead
    %tr
      %th #
      %th Type
      %th Link
      %th Action(s)
  %tbody
    - @social_profiles.each_with_index do |profile, index|
      %tr
        %td= index + 1
        %td
          = SocialProfile::SOCIAL_PROFILES[profile.sp_type].capitalize
        %td
          %a{ href: profile.sp_link, target: 'blank' }
            = profile.sp_link
        %td
          - if profile.new_record?
            = link_to "Add", add_merchants_social_profile_path(profile.sp_type), class: 'btn btn-info soical-profile-action-new'
          - else
            = link_to "Edit", edit_merchants_social_profile_path(profile.id), class: 'btn btn-primary soical-profile-action-edit'
            = link_to "Delete", merchants_social_profile_path(profile.id), class: 'btn btn-danger soical-profile-action-delete', method: :delete, confirm: "Are you sure you want to delete this profile?"