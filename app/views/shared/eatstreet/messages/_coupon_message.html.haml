/- if @message.instance_of?(CouponMessage) and @message.coupon_code.present?
/= render partial: "shared/#{message_partner_name(@shop)}/messages/qr_code"
    
%div{ style: 'padding:0!important; margin:0 auto; max-width:600px!important;'}
  %div{ style: 'width: 280px; float:left;'}
    %table{align: 'left', style: 'width: 100%'}
      %tr
        %td
          %p
            == We are treating you with a #{message_discount_type_text(@message)} off coupon. 
          %p  
            Here are the details:
          %p
            %strong Coupon Name:
            = @message.name

          %p
            %strong Details:
            /= render partial: "shared/#{message_partner_name(@shop)}/messages/content"
            = @message.content

          - if @message.fine_print.present?  
            %p
              %strong Fine Print:
              = render partial: "shared/#{message_partner_name(@shop)}/messages/fine_print"

  %div{style: 'width: 220px; float:left;'}
    %table{align: 'left', style: 'width: 100%'}
      %tr
        %td
          %h2{style: 'text-align: center;'}
            == #{message_discount_type_text(@message)} OFF
          %div{style: 'text-align:center;'}
            = message_bottom_image(@message)

            - if @message.show_button?
              %br
              /orange is #ff9c00 green is 63af31
              = link_to @message.button_text, @message.display_button_link, target: '_blank', style: "text-decoration:none;color: white;background: #63af31;-webkit-border-radius: 0;-moz-border-radius: 0;border-radius: 0; font-size: 22px; font-weight: bold; border-bottom: solid 2px rgba(0, 0, 0, 0.2);-webkit-transition: all 0.2s ease-out;-moz-transition: all 0.2s ease-out;-o-transition: all 0.2s ease-out;transition: all 0.2s ease-out;border-top: 0;border-left: 0;border-right: 0;padding: 20px 40px 20px 40px;display: inline-block;margin-bottom: 15px;"
%div{ style: 'padding:15px; max-width:600px; margin:0 auto; display:block;'}
  %table{ style: 'width:100%;'}
  /%p{:style => "text-align:center; padding-top:10px;"}
  /Coupon code:
  /%em{style: 'font: bold 1.4em/1.4em sans-serif; background: #ddd; padding: 2px 10px; margin: 15px 0 0 0;'}
  /= @message.coupon_code

= render partial: "shared/#{message_partner_name(@shop)}/messages/redemption"