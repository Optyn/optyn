#box_sign
  .container
    %h2 Your Account
    .span3.box_wrapper
      %ul.nav.nav-list
        %li.nav-header Your Menu
        %li.active
          = link_to "Edit personal information", edit_merchants_manager_registration_path if merchants_manager_signed_in?
        %li
          = link_to "Edit billing information", edit_billing_info_path if is_shop_local?(current_merchants_manager.shop)
        %li
          = link_to "Add location", new_merchants_location_path if is_shop_local?(current_merchants_manager.shop)
        %li
          = link_to "Add Manager", merchants_add_manager_path if merchants_manager_signed_in?
        %li
          = link_to "Your Locations", merchants_locations_path if is_shop_local?(current_merchants_manager.shop)
        %li
          = link_to "Your Shop", edit_merchants_shop_path()
        %li
          = link_to "Your API Button", edit_merchants_app_path if is_shop_local?(current_merchants_manager.shop)

    .span8.box_wrapper
      %p
        Connections Coming Soon