- if @shop.present? && @shop.social_profiles.present?
  %table{:style => "width:100%;clear:both;text-align:center;height:60px;" + "#{@message.footer_background_color_css_val rescue Shop::DEFAULT_FOOTER_BACKGROUND_COLOR};"}
    %tr
      %td
      %td
        %div{:style => "vertical-align: middle; text-align: center; margin:0 auto 0 auto;display:block; padding: 20px;"}
          %p{:font => "bold", :style => "font-size: 18px; line-height: 22px; margin: 0 20px 0 0; margin-bottom: 10px;"}
            Connect with us
          %p{:font => "bold", :style => "font-size: 14px; margin: 0px;"}
            - @shop.social_profiles.each do |profile|
              - name = SocialProfile::SOCIAL_PROFILES[profile.sp_type]
              = link_to(image_tag("#{SiteConfig.app_base_url}/assets/icon-#{name}.png", style: 'height: 40px; margin-right: 20px;'), "#{profile.sp_link}", :target => "_blank")
                      
      %td