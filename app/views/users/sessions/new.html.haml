
= display_flash_message

#box_login.login-container
  .container
    .span12.box_wrapper
      .span12.box
        %div
          .head
            %h4 Log in to your account

        .form
          = form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|

            = f.text_field :email, :placeholder => "Email", value: params[:email]

            = f.password_field :password, :placeholder => "Password"

            .remember
              .left
                = f.check_box :remember_me, id: 'remember_me'
                =label_tag "remember_me"
              .right
                = link_to "Forgot your password?", new_password_path(resource_name)
            %br
            %br
            = f.submit "Sign in", class: "btn"

        %p{class: "already"}
          Don't have an account?
          %br
          %a.btn.merchant-btn{:href => new_merchants_manager_registration_path}
            %i.icon-shopping-cart.icon-white
            Merchant Sign Up

= hidden_field_tag :login_type_omniauth_clients_path, login_type_omniauth_clients_path
= hidden_field_tag :login_type, ''

= render partial: "login_type"