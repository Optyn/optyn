
= display_flash_message

#box_login.login-container
  .container
    .span12.box_wrapper
      .span12.box
        %div
          .head
            %h4 Log in to your account

          = render partial: "users/shared/social_login_buttons"

        .form
          = form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|

            = f.text_field :email, :placeholder => "Email", value: params[:email]

            = f.password_field :password, :placeholder => "Password"

            .remember
              .left
                = f.check_box :remember_me, id: 'remember_me'
                =label_tag "remember_me"
              .right
                = link_to "Forgot your password?", new_password_path(resource_name)
            = f.submit "Sign in", class: "btn"

      %p{class: "already"}
        Don't have an account?
        = link_to "Sign up as a user", new_user_registration_path
        |
        = link_to "Sign up as a shop", new_merchants_manager_registration_path

= hidden_field_tag :login_type_omniauth_clients_path, login_type_omniauth_clients_path
= hidden_field_tag :login_type, ''

= render partial: "login_type"