.row-fluid.no-pad.expiration_date{:style => "display: #{show_message_part(@message.ending_date)}"}
  .input-append.date-picker.span6
    = f.text_field :ending_date, value: formatted_message_form_date(@message, :ending), id: 'message_ending', class: "input span12 expiration_date", 'data-format ' => "yyyy-MM-dd", 'data-toggle' => 'tooltip', title: ending_date_title, placeholder: 'EXPIRATION DATE'
    %span.add-on
      %i{'data-time-icon' => "icon-time", 'data-date-icon' => "icon-calendar"}

  .input-append.time-picker.span6
    = f.text_field :ending_time, value: formatted_message_form_time(@message, :ending), class: "input span12 ", 'data-format' => "HH:mm PP", 'data-toggle' => 'tooltip', title: ending_time_title, placeholder: 'EXPIRATION TIME'
    %span.add-on
      %i{'data-time-icon' => "icon-time", 'data-date-icon' => "icon-calendar"}
