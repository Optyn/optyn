#box_login
  .container
    .span12.box_wrapper
      .span12.box
        %div
          .head
            %h4 Log in to your account
          .social
            %a.face_login{:href => "#"}
              %span.face_icon
                = image_tag "front_end_static_page/i_face.png", alt: "fb"
              %span.text Sign in with Facebook
            .division
              %hr.left/
              %span or
              %hr.right/
          .form
            %form
              %input{:placeholder => "Email", :type => "text"}/
              %input{:placeholder => "Password", :type => "password"}/
              .remember
                .left
                  %input#remember_me{:type => "checkbox"}/
                  %label{:for => "remember_me"} Remember me
                .right
                  %a{:href => "reset.html"} Forgot password?
              %input.btn{:type => "submit", :value => "Sign in"}/
      %p.already
        Don't have an account?
        %a{:href => "signup.html"} Sign up
