.row
  %h2 &nbsp;
  = render partial: "merchants/messages/message_menu"

  .span7
    %h4
      = @message.subject
    %hr/

    .row
      .span4
        .span1
          = shop.logo_img.url rescue nil
        .span3
          ==  to: #{message_receiver_labels(@message.label_names)}
          == (#{@message.connections_count} total)

      .span4
        .span2.text-right
          = message_detail_date(@message)

        /reply all

    = render partial: "shared/messages/core_content", locals: {preview: false, customer_name: nil}

