%table{:style => 'width:100%; height:20px; max-width: 600px;border-top-left-radius:5px; border-top-right-radius:5px;' + "#{@message.header_background_color_css_val rescue Shop::DEFAULT_HEADER_BACKGROUND_COLOR}", :align => "center"}
  %tr
    %td
      %div{:style => "max-width:600px;margin:0 auto;display:block;"}
        /#20A8DD for background - try it #0C9FD8
        %table{:style => 'width:100%;' + "#{@message.header_background_color_css_val rescue Shop::DEFAULT_HEADER_BACKGROUND_COLOR}"}
          %tr
            %td{:style => "padding-left: 10px; max-height: 40px; padding-top: 5px;"}
              - if @shop_logo
                = email_body_shop_logo(@shop)
              - else
                = image_tag "http://www.optyn.com/assets/email_logo_white.png"

            %td{:style => "padding:10px; text-align: right;"}
              %h6{:style => "margin:0px;padding: 0px;font-size: 16px;color: #ffffff;weight:900;"}
                = yield :header
