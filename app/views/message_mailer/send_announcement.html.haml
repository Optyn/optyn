- unless @message.send_only_content?
  !!!
  %html
    %head
      %meta{:content => "width=device-width", :name => "viewport"}/
      %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %body{:height => "100%", :width => "100%", :bgcolor => "#EEEEEE", :style => "font-family: Helvetica;sans-serif; margin: 15px;"}

      = render partial: "shared/#{message_partner_name(@shop)}/mailers/banner"

      %table{:width => "100%", :style => "background-color: white; max-width: 600px;", :align => "center"}
        %tr
          %td
          %td{:style => "bgcolor:#FFF;display:block!important; max-width:600px; margin:0 auto; clear:both;word-break:break-word;word-wrap:break-word;"}
            %div
              %table{:style => "padding:10px; max-width:580px; margin:0 auto; display:block;"}
                %tr
                  %td
                    .message-content
                      = render partial: "shared/#{message_partner_name(@shop)}/messages/greeting", locals: {preview: false, customer_name: @message_user.first_name}

                    %p.core-content
                      - @user = @message_user.user
                      - @target_blank = true
                      - @email_survey = true
                      = render partial: "shared/#{message_partner_name(@shop)}/messages/#{message_rendering_partial(@message)}", locals: {preview: false}

                      = render partial: "shared/#{message_partner_name(@shop)}/messages/bottom_image_and_button" 

      = render partial: "shared/#{message_partner_name(@shop)}/mailers/footer"

      = image_tag "#{SiteConfig.app_base_url}#{email_read_logger_path(@message_user.encode64_uuid)}?tracker=#{@message_user.uuid}", :style => "width: 1px; height: 1px;", :alt => ''
- else
  = message_content(@message)