= banner( "Template Preview" )
= render partial: "merchants/messages/message_menu"

#merchants.pad3pc
  = render :partial => 'progress_bar'

  .row-fluid.no-pad.text-center
    .btn-group
      - if @message.editable_state?
        = link_to "Change Details", edit_template_merchants_message_path(@message.uuid), class: 'btn'
        = link_to "Change Content", template_merchants_message_path(@message.uuid), class: 'btn btn-'
        = link_to "Copy Message", copy_merchants_message_path(@message.uuid), class: 'btn btn-'
      - if !@message.queued? && !current_shop.disabled?   
        = link_to "Launch", launch_merchants_message_path(@message.uuid), class: 'btn btn-success'
        
      = link_to raw( "<i class='icon-envelope icon-white'></i> Send Me a Test Email" ), email_self_merchants_message_path(@message.uuid), class: "btn btn-info", id: "self_email"

    = render partial: "merchants/messages/preview_meta"

  .blank-space

  #template_wrapper.row-fluid.no-pad
    #template_pane
      %iframe#customHtmlTemplate{:src => preview_template_content_merchants_message_path(@message.uuid), :frameborder => 0, :scrolling => "auto", style: "width: 100%; height:100%;"}
        %html
