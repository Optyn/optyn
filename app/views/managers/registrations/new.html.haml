#box_sign
  .container
    .span12.box_wrapper
      .span12.box
        %div  
          .head
            %h4 Create your account
            
          = render partial: "managers/shared/social_login_buttons"

          .form  
            = form_for(@shop, :as => 'shop_name', :url => manager_registration_path(resource)) do |f|

              = devise_error_messages!

              %br
              %label.pull-left Enter Business Details :
              %br
               
              = f.text_field :name,:placeholder => "Business Name"
              %label.pull-left Business Type:
              = f.radio_button :stype,'online',:checked=>true
              = "Online"
              = f.radio_button :stype,'local'
              = "Local"

              %br
              %br
              %br
              %label.pull-left Personal Information :
              = f.fields_for :managers do |builder|
                = builder.text_field :name, :autofocus => true, :placeholder => "Name"
                = builder.text_field :email, :placeholder => "Email"

                = builder.password_field :password, :placeholder => "Password"
              
                = builder.password_field :password_confirmation, :placeholder => "Confirm Password"
              
              %br  
              %div 
                %em ** All the fields above are required 
              
              = f.submit "Sign up", :class => "btn"
      %p{:class => "already"}
        = link_to "Sign in", new_session_path(resource_name)
        %strong OR
        = link_to "Forgot your password?", new_password_path(resource_name)