.row
  %h2 Messagecenter

  = render partial: "merchants/messages/message_menu"

  .span9

    = render partial: 'merchants/messages/pager'

    %table.table.table-striped.table-condensed
      %thead
        %tr
          %th Name
          %th= second_name_label_text(nil)
          %th Last Updated
          %th Option(s)

      %tbody
        - @messages.each do |message|
          %tr
            %td
              = message.name
            %td
              = message.second_name
            %td
              = formatted_message_form_datetime(message, 'updated_at')
            %td
              =# link_to 'Detail', merchants_message_path(message.uuid), class: 'btn btn-info' #TODO TO BE IMPLEMENTED
              = link_to 'Edit', edit_merchants_message_path(message.uuid), class: 'btn btn-primary'
              = link_to 'Delete', move_to_trash_merchants_message_path(message.uuid), method: :delete, confirm: 'Are you sure you want to trash this message?',  class: 'btn btn-danger' #TODO TO BE IMPLEMENTED

    = render partial: 'merchants/messages/pager'