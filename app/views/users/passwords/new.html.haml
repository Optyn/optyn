= display_title "Reset your Password"
= display_meta_description "Easily Reset your Optyn password and do it safely.", "password reset, reset my password, optyn password reset"
#box_login.container-fluid
  .row-fluid
    .span12.box_wrapper
      .box.span4.offset4
        %div
          .head
            %h4 Forgot your password?
        
        .form.row-fluid
          = form_for(resource, :as => resource_name, :url => password_path(resource), :html => { :method => :post, :id => 'form_forgot_password' }) do |f|

            = f.email_field :email, placeholder: "Email", autofocus: true, 'data-toggle' => 'tooltip', title: 'Email', :class => 'input-block-level'

            .blank-space

            = f.submit "Reset password", class: "btn btn-primary"

        %p{class: "already"}
          = link_to "Sign in", new_user_session_path 
          /|
          /= link_to "Sign up as a user", new_user_registration_path
          |
          = link_to "Sign Up", new_merchants_manager_registration_path
