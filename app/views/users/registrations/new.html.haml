#box_sign
  .container
    .span12.box_wrapper
      .span12.box
        %div  
          .head
            %h4 Create your account
          .social
            = link_to("<span class='face_icon'>#{image_tag("facebook_icon.jpeg")}</span>".html_safe, "/auth/facebook", class: "face_login")
            = link_to("<span class='face_icon'>#{image_tag("twitter_icon.png")}</span>".html_safe, "/auth/twitter", class: "face_login")
            = link_to("<span class='face_icon'>#{image_tag("google_icon.png")}</span>".html_safe, "/auth/google_oauth2", class: "face_login")

            .division
              %hr{class: "left"}
              %span
                or
              %hr{class: "right"}
          .form  
            = form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
              = devise_error_messages!

              = f.text_field :name, :autofocus => true, :placeholder => "Name"

              = f.text_field :email, :placeholder => "Email"

              = f.password_field :password, :placeholder => "Password"
              
              = f.password_field :password_confirmation, :placeholder => "Confirm Password"

              %div 
                %em ** All the fields above are required 
              
              = f.submit "Sign up", :class => "btn"
      %p{:class => "already"}
        = link_to "Sign in", new_session_path(resource_name)
        %strong OR
        = link_to "Forgot your password?", new_password_path(resource_name)