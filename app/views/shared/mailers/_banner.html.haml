%table{:style => 'width:100%; height:20px; background-color:#1791c0; max-width: 600px;border-top-left-radius:5px; border-top-right-radius:5px;', :align => "center"}
  %tr
    %td
    %td
      %div{:style => "max-width:600px;margin:0 auto;display:block;"}
        /#20A8DD for background - try it #0C9FD8
        %table{:style => 'width:100%; background-color:#1791c0;'}
          %tr
            %td{:style => "padding-left: 20px; max-height: 40px;"}
              - if @shop_logo
                - if @shop.has_logo?
                  = image_tag @shop.logo_location, alt: @shop.name, title: @shop.name
                - else
                  %h3{:style => "color:white;"}
                    = @shop.name
              - else
                = image_tag "http://development.optyn.com/assets/logo.png"

            %td{:style => "padding:10px; text-align: right;"}
              %h6{:style => "margin:0px;padding: 0px;font-size: 16px;color: #ffffff;weight:900;"}
                = yield :header
    %td
