= banner("#{current_shop.name} Surveys")
.clearfix
%br
#questions_list
%table{class: 'table table-hover table-striped'}
  %thead
    %tr
      %th Survey
      %th Ready
      %th Last Updated At
      %th Action

  %tbody
    - if @list_survey.present?
      - @list_survey.each do |survey|
        %tr
          %td= survey.title
          %td= survey.ready
          %td= survey.updated_at
          %td= link_to "Show" , "/merchants/segments/show" ,:class=>"btn btn-primary btn-mini"#{@survey.id} 
    - else
      %tr
        %td{colspan: "4"} No Survey


/ = render partial: "merchants/surveys/new_question_modal"
/ = render partial: "merchants/surveys/edit_question_modal"
