#box_login.row-fluid
  .box.span4.offset4
    .head
      %h4 Change your password
    = form_for(resource, :as => resource_name, :url => merchants_manager_password_path(resource_name), :html => { :method => :put, class: 'form row-fluid' }) do |f|
      = f.hidden_field :reset_password_token
      = f.password_field :password, :autofocus => true, 'data-toggle' => 'tooltip', title: 'New password', placeholder: 'New password'
      = f.password_field :password_confirmation, 'data-toggle' => 'tooltip', title: 'Confirm password', placeholder: 'Confirm password'
      = f.submit "Change my password", class: 'btn btn-primary btn-large'
    %p.already
      = render "users/shared/links"