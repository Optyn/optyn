#box_login
  .container
    .span12.box_wrapper
      .span12.box
        %div
          .head
            %h4 Log in to your account
          
          = render partial: "managers/shared/social_login_buttons"  

        .form
          = form_for(resource, :as => resource_name, :url => manager_session_path(resource)) do |f|

            = f.text_field :email, :placeholder => "Email"

            = f.password_field :password, :placeholder => "Password"

            .remember
              .left
                = f.check_box :remember_me, id: 'remember_me'
                =label_tag "remember_me"
              .right
                = link_to "Forgot your password?", new_manager_password_path
            = f.submit "Sign in", class: "btn"        

      %p{class: "already"}
        Don't have an account?
        = link_to "Sign Up", new_manager_registration_path    