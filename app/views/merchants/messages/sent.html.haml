.row
  %h2 Messagecenter

  = render partial: "merchants/messages/message_menu"

  .span9

    = render partial: 'merchants/messages/pager'

    %table.table.table-striped.table-condensed
      %thead
        %tr
          %th Name
          %th= second_name_label_text(nil)
          %th Last Updated
          %th Option(s)

      %tbody
        - unless @messages.blank?
          - @messages.each do |message|
            %tr
              %td
                = message.name
              %td
                = message.second_name
              %td
                = formatted_message_form_datetime(message, 'updated_at')
              %td
                =# link_to 'Details', move_to_draft_merchants_message_path(message.uuid), class: 'btn btn-primary', method: :put, confirm: 'Are you sure you want to move you message to drafts?'
        - else
          %tr
            %td{colspan: '4'}
              .text-center No Sent messages right now


    = render partial: 'merchants/messages/pager'