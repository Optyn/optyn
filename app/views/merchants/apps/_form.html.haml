= hidden_field_tag :reset, false
.custom
  = f.text_field :redirect_uri, placeholder: 'Your website URL', 'data-toggle' => 'tooltip', title: 'Enter your website URL'

  = f.hidden_field :call_to_action, value: 3.to_s

  .option
    %h5 Bar Option
    %a{"data-toggle" => "tooltip", :href => "#", :title => "Highly Recommended. We recommend the Top bar that gives you a better way of capturing your customers.", :class => "tip"}
      %label.radio.inline
        = f.radio_button :render_choice, 1.to_s
        Top Bar
    %a{"data-toggle" => "tooltip", :href => "#", :title => "A module can be placed anywhere on a website and within a content.", :class => "tip"}
      %label.radio.inline
        = f.radio_button :render_choice, 2.to_s
        Module

  .option
    %label.radio.inline
      = f.radio_button :begin_state, 1
      Bar Expanded

    %label.radio.inline
      = f.radio_button :begin_state, 0
      Bar Collapsed
  .option
    %label
      Choose Bar Background Color
  .custom
    = f.text_field :background_color

  .option
    %label.checkbox
      = f.check_box(:checkmark_icon)
      Show Checkmark Icon

  .option
    %label.checkbox
      = f.check_box(:show_default_optyn_text, class: 'optyn-text-preference')
      Use Optyn Text

    %textarea{:rows => "3", :placeholder => SiteConfig.api_welcome_message, :readonly => 'readonly'}

  .option
    %p
      %strong Or

  .option
    %label.checkbox{"data-toggle" => "tooltip", :title => "You can write your own custom message to get people to opt-in."}
      = check_box_tag(:show_custom_optyn_text, '1', false,  class: 'optyn-text-preference')
      Use Custom Optyn Text

    = f.text_area(:custom_text, rows: 3, :placeholder => "Enter your custom tag line here. Be creative or use ours.")
  .option
    %label
      Redirect URL
  .custom
    = f.text_field :redirect_uri_after_login, placeholder: 'Redirect Url', 'data-toggle' => 'tooltip', title: 'Enter your Redirect Url'
    - unless @application.new_record?
      .refresh
        %a.btn.btn-primary.refreshbtn{:id => "save_button", :href => "javascript:void(0)"} Save
        %a.btn.btn-primary.refreshbtn{:id => "save_and_reset_button", :href => "javascript:void(0)"} Save & Reset Token
    - else
      .refresh
        %a.btn.refreshbtn.btn-block.btn-primary{:id => "generate_button", :href => "javascript:void(0)"} Generate Button

    #loading{style: "display: none; text-align: right;"}
      %strong
        Loading...


