%table{:style => "width:100%;max-width:600px;margin:auto;clear:both;text-align:center;height:60px;" + "#{@message.footer_background_color_css_val rescue Shop::DEFAULT_FOOTER_BACKGROUND_COLOR};"}
  - if @message.present? and @message.make_public

    %tr
      %td
        %div{:style => "text-align:center;margin:20px auto;"}
          - @user_email = @user_email ? @user_email : (@user ? @user.email : nil)
          - btn_width = optyn_user?(@user_email) ? 'width: 33%;' : 'width: 50%;'
          - btn_styles = 'float:left;color: #fff;height: 50px;padding-top:4px;text-decoration:none;' + btn_width
          - msg = "#{@message.name} #{@message.uuid}"
          - public_msg = "#{SiteConfig.app_base_url}/#{@shop.name.parameterize}/campaigns/#{msg.parameterize}"
          - facebook_link = get_social_share_link("facebook", @message, public_msg)
          %a{:href => "#{facebook_link}", :target => "_blank", style: 'background: #3a589b;' + btn_styles}
            = image_tag("#{SiteConfig.app_base_url}/assets/icon-facebook.png", :style => "vertical-align:middle;")
            SHARE
          - twitter_link = get_social_share_link("twitter", @message, public_msg)
          %a{:href => "#{twitter_link}", :target => "_blank", style: 'background:#598dca;' + btn_styles}
            = image_tag("#{SiteConfig.app_base_url}/assets/icon-twitter.png", :style => "vertical-align:middle;")
            TWEET
          / - if optyn_user?(@user_email)
          /   %a{:href => "#{SiteConfig.app_base_url}/share_email/#{@message.uuid}", :target => "_blank", style: 'height:50px;float:left;width:34%;padding-top:4px;background:#db4a39;color:#fff;text-decoration:none;'}
          /     = image_tag("#{SiteConfig.app_base_url}/assets/icon-email.png", :style => "vertical-align:middle;")
          /     EMAIL
          %div{:style => "width:100%;height:1px;clear:both;float:none;"}

/Email Social Profiles
= render partial: "shared/mailers/email_social_profiles"

/Optyn Send Free emails add
= render partial: "shared/mailers/optyn_advertisement"

%div{ style: 'width:100%;padding:20px 0 0 0;text-align:center;'}
  %p{:style => "font-size: 11px;margin:0px;"}
    - if @message.present? 
      / Sent to information
      = render partial: "shared/mailers/sent_to_address"
      
      / Render the unsubscribe link
