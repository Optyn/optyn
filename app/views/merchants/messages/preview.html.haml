= banner( "Campaign Center" )
= render partial: "merchants/messages/message_menu"

#merchants.pad3pc
  %h2 Email Preview

  = render :partial => 'progress_bar'
  .container-fluid
    .span3.preview-left
      = render partial: "merchants/messages/preview_meta"

    .span9#message_fields_wrapper
      #message_details
        %h3{class: 'text-center'}
          Your email will appear like below
          = link_to "Edit Campaign", edit_merchants_message_path(@message.uuid), class: "btn btn-primary"
          = link_to "Send it", launch_merchants_message_path(@message.uuid), class: "btn btn-success"
          - if @message.is_child?
            = link_to "Parent Message", edit_merchants_message_path(@message.parent.uuid), class: "btn btn-warning"

        %hr/

        .row

          = content_for :header do
            Preview Only

          = render partial: "preview_wrapper"