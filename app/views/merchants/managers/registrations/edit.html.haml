= display_flash_message
#merchants
  .container
    = render partial: "merchants/shared/menu"
    .span8.edit_page
      .header
        %h3
          %img{:src => "/assets/edit-account-icon.png"}
          Edit Your Account
      .form
        = form_for(resource, :as => resource_name, :url => merchants_manager_registration_path, :html => { :method => :put }) do |f|
          = devise_error_messages!
          %div
            = f.label :email
            %br
            = f.email_field :email
          - if devise_mapping.confirmable? && resource.pending_reconfirmation?
            %div
              Currently waiting confirmation for: #{resource.unconfirmed_email}
          - if resource.authentications.blank?
            %div
              = f.label :password
              %i (leave blank if you don't want to change it)
              %br
              = f.password_field :password, :autocomplete => "off"
            %div
              = f.label :password_confirmation
              %br
              = f.password_field :password_confirmation
            %div
              = f.label :current_password
              %i (we need your current password to confirm your changes)
              %br
              = f.password_field :current_password
            %div
              = f.label :picture
              %img{:src => current_merchants_manager.image_url(session[:omniauth_manager_authentication_id]), :alt => "User Avatar", :class => "profile_image"}
              %br
              = f.file_field :picture 
              %br
              
          %div= f.submit "Update"
          %br/
          %br/
        -#%h3 Cancel my account
        -#%p
          -#Unhappy? #{button_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete}.
        = link_to "Back", :back




