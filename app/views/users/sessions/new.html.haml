#box_login
  .container
    .span12.box_wrapper
      .span12.box
        %div
          .head
            %h4 Log in to your account

          .social
            = link_to("<span class='face_icon'>#{image_tag("twitter_icon.png")}</span>".html_safe, "/auth/twitter", class: "face_login")
            = link_to("<span class='face_icon'>#{image_tag("facebook_icon.png")}</span>".html_safe, "/auth/facebook", class: "face_login")
            = link_to("<span class='face_icon'>#{image_tag("google_icon.png")}</span>".html_safe, "/auth/google_oauth2", class: "face_login")  

          .division
            %hr{class: "left"}
            %span
              or
            %hr{class: "right"}

        .form
          = form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|

            = f.text_field :email, :placeholder => "Email"

            = f.password_field :password, :placeholder => "Password"

            .remember
              .left
                = f.check_box :remember_me, id: 'remember_me'
                =label_tag "remember_me"
              .right
                = link_to "Forgot your password?", new_password_path(resource_name)
            = f.submit "Sign in", class: "btn"        

      %p{class: "already"}
        Don't have an account?
        = link_to "Sign Up", new_user_registration_path    