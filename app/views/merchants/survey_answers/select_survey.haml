%h1{style: 'float:none;'} Select Survey
.row-fluid
  .span12
    = form_tag("", method: "GET") do
      = label_tag(:survey_id,"Choose Survey You Want to Send")
      / = select_tag :survey_id, options_from_collection_for_select(@list_survey, "id", "title")
      %select{:name=>"list"}
        - @list_survey.each do |survey|
          %option{:value=>"/merchants/segments/#{survey.id}/answers"}
            =survey.title
      = submit_tag("Choose", class: 'btn btn-primary')