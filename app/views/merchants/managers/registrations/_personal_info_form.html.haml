.personal-info
  %label.pull-left Personal Information :
  = f.fields_for :managers do |builder|

    = builder.text_field :name, :placeholder => "Name", 'data-toggle' => 'tooltip', title: 'Name'
    = builder.text_field :email, :placeholder => "Email", 'data-toggle' => 'tooltip', title: 'Email'

    - unless @omniauth.present?
      = builder.password_field :password, :placeholder => "Password", 'data-toggle' => 'tooltip', title: 'Password'
      = builder.password_field :password_confirmation, :placeholder => "Confirm Password", 'data-toggle' => 'tooltip', title: 'Confirm password'

    = hidden_field_tag :auth_id, nil, value: @omniauth[:uid] if @omniauth.present?
    = hidden_field_tag :auth_provider, nil, value: @omniauth[:provider] if @omniauth.present?
