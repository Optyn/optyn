- if @message.present? and @message.make_public
  %table{:style => "width:100%;max-width:600px;margin:auto;clear:both;text-align:center;height:60px;" + message_footer_background_color(@message)}
    %tr
      %td
        %div{:style => "text-align:center;margin:20px auto;"}
          - @receiver_email = @receiver_email ? @receiver_email : (@receiver ? @receiver.email : nil)
          /- btn_width = optyn_user?(@user_email) ? 'width: 33%;' : 'width: 50%;'
          - btn_styles = 'float:left;color:#111;height:20px;font-size:12px;line-height:20px;text-decoration:none;display:inline-block;'
          - msg = "#{@message.name} #{@message.uuid}"
          - public_msg = "#{SiteConfig.email_app_base_url}/#{@shop.name.parameterize}/campaigns/#{msg.parameterize}"
          - facebook_link = get_social_share_link("facebook", @message, public_msg)
          %a{:href => "#{facebook_link}", :target => "_blank", style: btn_styles}
            = image_tag("#{SiteConfig.email_app_base_url}/assets/icon-facebook.png", :style => "vertical-align:middle;width:20px !important;height: 20px !important;")
            SHARE
          - twitter_link = get_social_share_link("twitter", @message, public_msg)
          %a{:href => "#{twitter_link}", :target => "_blank", style: btn_styles}
            = image_tag("#{SiteConfig.email_app_base_url}/assets/icon-twitter.png", :style => "vertical-align:middle;width:20px !important;height: 20px !important;")
            TW
          %div{:style => "width:100%;height:1px;clear:both;float:none;"}