.actions
  - unless @message.is_child?
    - if @message.draft?
      = submit_tag("Save as Draft", name: "save_draft", class: 'btn btn-info')

    = submit_tag("Save and Preview", name: "preview", class: 'btn btn-primary')
    = submit_tag("Launch", name: "launch", class: 'btn btn-success')
  - else
    = submit_tag("Save", name: "save_draft", class: 'btn btn-info')
    = submit_tag("Save and Preview", name: "preview", class: 'btn btn-primary')
    = submit_tag("Save and navigate to parent", name: "save_and_navigate_parent", class: 'btn btn-success')